{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "requireConfigFile": false
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
    }
}